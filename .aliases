#!/usr/bin/env bash
# Aliases
# vim: syntax=sh

OS="$(uname)"
export OS

# Misc
alias vi='vim'
alias ri='ri -f ansi'
command -v colordiff &>/dev/null && alias diff='colordiff'
alias takeover='tmux detach -a'
alias ag='ag --smart-case --pager="less -MIRFX"'

# Git
if command -v hub &>/dev/null; then
  alias git=hub
