[user]
name = Benjamin Dos Santos
email = benjamin.dossantos@gmail.com

[color]
ui = true
branch = auto
diff = auto
interactive = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold # line info
old = red # deletions
new = green # additions

[color "status"]
added = yellow
changed = green
untracked = cyan

[core]
excludesfile = ~/.gitignore_global

[branch]
autosetuprebase = always

[merge]
summary = true

[push]
default = simple

[commit]
template = ~/.gitmessage

[gc]
auto = 1

[credential]
helper = /usr/local/bin/git-credential-osxkeychain

[hub]
protocol = https
